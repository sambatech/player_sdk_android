<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/middle_section"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/top_chrome"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:padding="16dp"
        android:background="@drawable/controls_top_background">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/logo_image"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:contentDescription="@string/logo_image"
                tools:ignore="RtlHardcoded" />

            <TextView
                android:id="@+id/video_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/menu_container"
                android:layout_toRightOf="@id/logo_image"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                tools:ignore="RtlHardcoded" />

            <LinearLayout
                android:id="@id/menu_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="-8dp"
                android:layout_marginRight="-14dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingTop="0dp"
                tools:ignore="RtlHardcoded">

                <LinearLayout
                    android:id="@+id/actions_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    tools:ignore="RtlHardcoded" />

                <ImageButton
                    android:id="@+id/menu_button"
                    android:src="@drawable/ic_menu"
                    android:background="@android:color/transparent"
                    android:layout_width="44dp"
                    android:layout_height="44dp" />

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <ImageButton
        android:contentDescription="@string/pause"
        android:id="@+id/pauseLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@android:color/transparent"
        android:visibility="invisible"
        android:src="@drawable/ic_action_pause_large" />

    <LinearLayout
        android:id="@+id/bottom_chrome"
        android:background="@drawable/controls_bottom_background"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:layout_margin="0dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            style="@style/control">

            <!-- TODO: trocar por vetor -->
            <ImageButton
                android:contentDescription="@string/pause"
                android:id="@+id/pause"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_action_pause"
                android:visibility="gone"
                style="@style/control"/>

            <ProgressBar
                android:id="@+id/loading"
                android:visibility="gone"
                style="@style/control"/>

            <LinearLayout android:id="@+id/time_container"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                    style="@style/control">

                <TextView
                    android:contentDescription="@string/time_current"
                    android:id="@+id/time_current"
                    tools:ignore="RtlHardcoded"
                    android:layout_marginLeft="15dp"
                    style="@style/time" />

                <TextView
                    android:id="@+id/time_separator"
                    android:text="@string/time_separator"
                    android:textColor="@color/text_gray"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    style="@style/time" />

                <TextView
                    android:contentDescription="@string/time_duration"
                    android:id="@+id/time_duration"
                    android:layout_marginRight="10dp"
                    android:layout_marginEnd="10dp"
                    android:textColor="@color/text_gray"
                    style="@style/time" />
            </LinearLayout>

            <SeekBar
                android:contentDescription="@string/seekbar"
                android:id="@+id/mediacontroller_progress"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:thumb="@drawable/thumb"
                android:progressDrawable="@drawable/seekbar_progress"
                style="@style/control" />

            <ImageButton
                android:contentDescription="@string/fullscreen"
                android:id="@+id/fullscreen"
                android:src="@drawable/fullscreen"
                android:background="@android:color/transparent"
                style="@style/control" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
